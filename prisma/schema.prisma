generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
}

model User {
  id            String    @id @default(uuid())
  name          String?
  email         String    @unique
  emailVerified DateTime? @map("email_verified")
  image         String?
  passwordHash  String?   @map("password_hash") 
  
  createdAt     DateTime  @default(now()) @map("created_at")
  
  // ADDED @default(now()) HERE to satisfy existing rows
  updatedAt     DateTime  @default(now()) @updatedAt @map("updated_at")

  // XP & Streak System
  totalXp          Int       @default(0) @map("total_xp")
  monthlyXp        Int       @default(0) @map("monthly_xp")
  monthlyXpResetAt DateTime  @default(now()) @map("monthly_xp_reset_at")
  streakCount      Int       @default(0) @map("streak_count")
  lastActiveDate   DateTime? @map("last_active_date")

  // Subscription System
  isPro                 Boolean   @default(false) @map("is_pro")
  polarCustomerId       String?   @map("polar_customer_id")
  polarSubscriptionId   String?   @map("polar_subscription_id")
  subscriptionStatus    String?   @map("subscription_status") // active, canceled, past_due
  subscriptionStartedAt DateTime? @map("subscription_started_at")
  subscriptionEndsAt    DateTime? @map("subscription_ends_at")
  aiGenerationsToday    Int       @default(0) @map("ai_generations_today")
  aiGenerationsResetAt  DateTime  @default(now()) @map("ai_generations_reset_at")

  cards         Card[]
  accounts      Account[]
  sessions      Session[]

  @@map("users")
}

model Account {
  id                 String  @id @default(cuid())
  userId             String  @map("user_id")
  type               String
  provider           String
  providerAccountId  String  @map("provider_account_id")
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Card {
  id                   String    @id @default(uuid())
  userId               String    @map("user_id")
  word                 String
  imageUrl             String    @map("image_url")
  sentences            String[]
  currentSentenceIndex Int       @default(0) @map("current_sentence_index")
  consecutiveCorrect   Int       @default(0) @map("consecutive_correct")
  easeFactor           Float     @default(2.5) @map("ease_factor")
  lastReviewedAt       DateTime? @map("last_review_at")
  nextReviewAt         DateTime  @default(now()) @map("next_review_at")
  currentIntervalMs    BigInt    @default(0) @map("current_interval_ms")
  createdAt            DateTime  @default(now()) @map("created_at")
  user                 User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId, nextReviewAt], map: "idx_cards_user_review")
  @@map("cards")
}